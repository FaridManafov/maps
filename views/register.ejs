<% include ./partials/header %>

<h1 align="center"> New User </h1>

<div id="registration-form" class="container" style="width: 40%">
  <form action="/register" method="POST">
    <div class="form-group">
      <label for="useremail">Email</label>
      <input type="email" class="form-control" id="useremail" aria-describedby="emailHelp" name="useremail" placeholder="Email">
    </div>
    <div class="form-group">
      <label for="userpassword">Password</label>
      <input type="password" class="form-control" id="userpassword" placeholder="Password" name="userpassword">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<% include ./partials/footer %>
